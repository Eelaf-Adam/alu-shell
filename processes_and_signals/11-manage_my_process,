#!/usr/bin/env bash
# Task 10
PIDFILE="/var/run/my_process.pid"

start_process() {
  # Run infinite loop in background
  bash -c 'while true; do echo "I am alive!" >> /tmp/my_process; sleep 2; done' &
  echo $! > "$PIDFILE"
  echo "manage_my_process started"
}

stop_process() {
  if [ -f "$PIDFILE" ]; then
    kill "$(cat "$PIDFILE")" 2>/dev/null
    rm -f "$PIDFILE"
  fi
  echo "manage_my_process stopped"
}

case "$1" in
  start)
    start_process
    ;;
  stop)
    stop_process
    ;;
  restart)
    stop_process
    start_process
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    ;;
esac
